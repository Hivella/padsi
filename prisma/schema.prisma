generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}









model User {
  id    Int     @id @default(autoincrement()) // Kunci utama, akan auto-increment
  email String  @unique // Email harus unik
  name  String? // Opsional
  projects Project[] // Relasi: Satu User dapat memiliki banyak Project
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  // Relasi: Foreign Key ke model User
  owner     User    @relation(fields: [ownerId], references: [id]) 
  ownerId   Int      
  createdAt DateTime @default(now())
}